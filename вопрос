SELECT c.customer_id
FROM 
  (SELECT customer_id,
         last_name
  FROM client) AS c
LEFT OUTER JOIN
  (SELECT customer_id,
          CAST(invoice_date AS date)
   FROM invoice 
   WHERE EXTRACT(YEAR FROM CAST(invoice_date AS date)) = 2013
           AND EXTRACT(MONTH FROM CAST(invoice_date AS date)) = 1) AS i ON c.customer_id = i.customer_id;

